// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(cuid())
  phone     String   @unique
  password  String
  pseudo    String?
  credits   Int      @default(150)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ExchangeTask {
  id              String   @id @default(cuid())
  type            TaskType
  url             String
  credits         Int
  actionsRestantes Int
  createur        String
  completions     ExchangeTaskCompletion[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model ExchangeTaskCompletion {
  id              String   @id @default(cuid())
  exchangeTaskId  String
  userId          String
  completedAt     DateTime @default(now())

  exchangeTask    ExchangeTask @relation(fields: [exchangeTaskId], references: [id], onDelete: Cascade)
}

model CompletedTask {
  id            String   @id @default(cuid())
  taskId        String   @unique
  completedAt   DateTime @default(now())
}

model BoostOrder {
  id            String   @id @default(cuid())
  type          BoostType
  quantity      Int
  amount        Float
  status        OrderStatus @default(PENDING)
  paymentMethod String?
  createdAt     DateTime @default(now())
  completedAt   DateTime?
}

model Analytics {
  id            String   @id @default(cuid())
  date          DateTime
  followers     Int
  views         Int
  likes         Int
  comments      Int
  shares        Int
  engagement    Float
}

enum TaskType {
  LIKE
  FOLLOW
  COMMENT
  SHARE
}

enum BoostType {
  FOLLOWERS
  VIEWS
  LIKES
  COMMENTS
}

enum OrderStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
} 