<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    android:padding="20dp">

    <!-- Logo principal avec animation de pulsation -->
    <ImageView
        android:id="@+id/logo_main"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-100dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerInside"
        android:contentDescription="BE STRONG Logo" />

    <!-- Titre principal avec animation de fade-in -->
    <TextView
        android:id="@+id/title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/splash_title"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-light"
        android:alpha="0.0" />

    <!-- Sous-titre avec animation de slide-up -->
    <TextView
        android:id="@+id/subtitle_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/splash_subtitle"
        android:textSize="16sp"
        android:textColor="#B0BEC5"
        android:fontFamily="sans-serif"
        android:alpha="0.0" />

    <!-- Indicateur de chargement animé -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:indeterminateTint="#EC4899"
        android:alpha="0.0" />

    <!-- Particules décoratives (cercles animés) -->
    <View
        android:id="@+id/particle_1"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/particle_circle"
        android:alpha="0.0" />

    <View
        android:id="@+id/particle_2"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/particle_circle"
        android:alpha="0.0" />

    <View
        android:id="@+id/particle_3"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/particle_circle"
        android:alpha="0.0" />

</RelativeLayout>